    "performance_monitoring": {
      "automation_kpis": [
        {
          "metric": "Email Automation ROI",
          "calculation": "(revenue_from_automation - automation_costs) / automation_costs * 100",
          "target": "800%",
          "tracking_method": "utm_tagged_conversions"
        },
        {
          "metric": "Lead Nurturing Conversion Rate",
          "calculation": "nurtured_leads_converted / total_nurtured_leads * 100",
          "target": "18%",
          "tracking_method": "crm_pipeline_analysis"
        },
        {
          "metric": "Customer Lifetime Value Impact",
          "calculation": "automated_customer_clv - non_automated_customer_clv",
          "target": "25%_increase",
          "tracking_method": "cohort_analysis"
        },
        {
          "metric": "Automation Efficiency",
          "calculation": "manual_task_hours_saved / total_automation_hours",
          "target": "10:1_ratio",
          "tracking_method": "time_tracking_analysis"
        }
      ],
      "optimization_schedule": {
        "daily": ["automation_performance_monitoring", "trigger_optimization"],
        "weekly": ["a_b_test_analysis", "segment_performance_review"],
        "monthly": ["workflow_optimization", "roi_analysis"],
        "quarterly": ["strategy_review", "automation_expansion_planning"]
