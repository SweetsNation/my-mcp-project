    "customer_lifecycle_automation": [
      {
        "lifecycle_stage": "new_customer_onboarding",
        "workflow_id": "TC_005_CUSTOMER_ONBOARDING",
        "trigger": "policy_purchase_completion",
        "objective": "ensure_customer_satisfaction_and_retention",
        "steps": [
          {
            "step": 1,
            "delay": "immediate",
            "action_type": "welcome_email",
            "subject": "Welcome to Elmag Insurance - Your Trip is Now Protected!",
            "content": "policy_confirmation_and_welcome",
            "attachments": ["policy_documents", "claims_contact_info", "mobile_app_link"],
            "call_to_action": "Download Our Mobile App"
          },
          {
            "step": 2,
            "delay": "7_days",
            "action_type": "educational_email",
            "subject": "How to File a Trip Cancellation Claim (Hope You Never Need This!)",
            "content": "claims_process_education",
            "attachments": ["claims_process_guide", "emergency_contact_card"]
          },
          {
            "step": 3,
            "delay": "30_days",
            "action_type": "satisfaction_survey",
            "subject": "How Was Your Experience Getting Trip Protection?",
            "survey_focus": "purchase_experience_feedback",
            "incentive": "chance_to_win_travel_voucher",
            "follow_up": "review_request_if_positive"
          },
          {
            "step": 4,
            "delay": "90_days",
            "action_type": "renewal_reminder",
            "subject": "Planning Your Next Adventure? Get Protected Again",
            "content": "loyalty_discount_offer",
            "discount": "10%_returning_customer",
            "personalization": "previous_trip_reference"
          }
        ]
      },
      {
        "lifecycle_stage": "customer_retention",
        "workflow_id": "TC_006_RETENTION_REACTIVATION",
        "trigger": "customer_inactivity_or_policy_expiration",
        "objective": "reactivate_past_customers",
        "steps": [
          {
            "step": 1,
            "delay": "30_days_after_last_policy",
            "action_type": "reactivation_email",
            "subject": "Miss Us? Exclusive Offer for Our Valued Customers",
            "content": "we_miss_you_message",
            "incentive": "15%_welcome_back_discount",
            "call_to_action": "Plan Your Next Protected Trip"
          },
          {
            "step": 2,
            "delay": "60_days",
            "action_type": "value_reminder_email",
            "subject": "Remember When We Saved [CUSTOMER_NAME]'s $3,500 Trip?",
            "content": "success_story_reminder",
            "personalization": "customer_previous_experience",
            "call_to_action": "Get Protected for Your Next Adventure"
          },
          {
            "step": 3,
            "delay": "90_days",
            "action_type": "survey_and_feedback",
            "subject": "Help Us Improve - What Would Bring You Back?",
            "survey_purpose": "reactivation_barrier_identification",
            "incentive": "gift_card_or_discount",
            "follow_up": "personalized_offer_based_on_feedback"
          }
        ]
      }
    ],
    "behavioral_trigger_automation": [
      {
        "trigger_type": "website_behavior",
        "automation_rules": [
          {
            "behavior": "visited_pricing_page_3_times",
            "action": "send_pricing_clarification_email",
            "delay": "2_hours",
            "subject": "Questions About Trip Cancellation Insurance Pricing?",
            "content": "pricing_transparency_and_value_explanation"
          },
          {
            "behavior": "downloaded_guide_but_no_quote",
            "action": "educational_nurture_sequence",
            "delay": "1_day",
            "sequence_focus": "guide_topic_deep_dive"
          },
          {
            "behavior": "visited_competitor_comparison_page",
            "action": "competitive_differentiation_email",
            "delay": "4_hours",
            "subject": "Why Choose Elmag Over [COMPETITOR_NAME]?",
            "content": "competitive_advantages_and_testimonials"
          },
          {
            "behavior": "spent_over_5_minutes_on_claims_page",
            "action": "claims_support_offer",
            "delay": "immediate",
            "action_type": "chat_popup_and_email",
            "message": "Need help with a claim? Our specialists are here to help."
          }
        ]
      },
      {
        "trigger_type": "engagement_level",
        "automation_rules": [
          {
            "engagement": "high_email_engagement_low_conversion",
            "action": "phone_outreach_offer",
            "criteria": "open_rate > 40%, no_conversion_after_30_days",
            "message": "Personal consultation offer from trip protection specialist"
          },
          {
            "engagement": "low_email_engagement",
            "action": "re_engagement_campaign",
            "criteria": "open_rate < 10%, 3_consecutive_emails",
            "campaign_focus": "win_back_with_different_content_format"
          },
          {
            "engagement": "social_media_engagement",
            "action": "social_lead_nurture",
            "criteria": "likes_shares_comments_on_trip_content",
            "approach": "social_media_direct_message_with_value_offer"
          }
        ]
      }
    ],
