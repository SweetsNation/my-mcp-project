    "lead_nurturing_workflows": [
      {
        "workflow_id": "TC_001_QUOTE_ABANDONMENT",
        "workflow_name": "Trip Cancellation Quote Abandonment Recovery",
        "trigger": "quote_started_not_completed",
        "objective": "recover_abandoned_quotes",
        "target_audience": "users_who_started_quote_process",
        "workflow_steps": [
          {
            "step": 1,
            "delay": "2_hours",
            "action_type": "email",
            "subject": "Complete Your Trip Cancellation Quote - Just 2 Minutes Left",
            "content": "friendly_reminder_with_benefits",
            "personalization": [
              "user_name",
              "trip_destination",
              "estimated_coverage_cost"
            ],
            "call_to_action": "Complete Quote Now",
            "success_metric": "email_open_rate > 25%, click_rate > 8%"
          },
          {
            "step": 2,
            "delay": "1_day",
            "action_type": "retargeting_ad",
            "platform": "google_facebook",
            "ad_message": "Don't Risk Your Vacation Investment",
            "incentive": "5% discount for quote completion",
            "duration": "7_days",
            "success_metric": "click_through_rate > 2%"
          },
          {
            "step": 3,
            "delay": "3_days",
            "action_type": "email",
            "subject": "⚠️ Your $X,XXX Trip Needs Protection - Get Quote",
            "content": "urgency_based_with_statistics",
            "social_proof": "50,000+ travelers protected",
            "personalization": ["trip_cost", "destination_risks"],
            "success_metric": "conversion_rate > 3%"
          },
          {
            "step": 4,
            "delay": "7_days",
            "action_type": "phone_outreach",
            "script": "quote_assistance_offer",
            "timing": "business_hours",
            "caller_id": "trip_cancellation_specialist",
            "success_metric": "contact_rate > 15%, conversion_rate > 8%"
          },
          {
            "step": 5,
            "delay": "14_days",
            "action_type": "email",
            "subject": "Last Chance: Travel Smart with Trip Protection",
            "content": "final_opportunity_educational",
            "attached_resource": "trip_cancellation_guide_pdf",
            "exit_condition": "move_to_educational_nurture",
            "success_metric": "resource_download > 10%"
          }
        ],
        "performance_targets": {
          "quote_recovery_rate": 15,
          "cost_per_recovered_quote": 25,
          "conversion_rate": 8,
          "roi": 380
        }
      },
      {
        "workflow_id": "TC_002_LEAD_NURTURING",
        "workflow_name": "Trip Cancellation Educational Lead Nurturing",
        "trigger": "email_signup_or_content_download",
        "objective": "educate_and_convert_prospects",
        "target_audience": "educational_content_subscribers",
        "workflow_steps": [
          {
            "step": 1,
            "delay": "immediate",
            "action_type": "email",
            "subject": "Welcome! Your Free Trip Cancellation Insurance Guide",
            "content": "welcome_email_with_guide",
            "attachments": ["comprehensive_trip_cancellation_guide.pdf"],
            "call_to_action": "Get Your Free Quote",
            "success_metric": "open_rate > 30%, click_rate > 12%"
          },
          {
            "step": 2,
            "delay": "3_days",
            "action_type": "email",
            "subject": "Real Story: How Sarah Saved $4,200 on Her Cancelled Cruise",
            "content": "customer_success_story",
            "story_focus": "cruise_cancellation",
            "call_to_action": "Calculate Your Trip Protection Cost",
            "success_metric": "engagement_rate > 8%"
          },
          {
            "step": 3,
            "delay": "7_days",
            "action_type": "email",
            "subject": "Do You Need Trip Cancellation Insurance? Take Our Quiz",
            "content": "interactive_assessment",
            "quiz_topic": "trip_cancellation_necessity",
            "personalization": "quiz_results_based",
            "success_metric": "quiz_completion > 20%"
          },
          {
            "step": 4,
            "delay": "10_days",
            "action_type": "segmented_email",
            "segmentation_criteria": [
              {
                "segment": "cruise_interested",
                "subject": "Cruise Trip Protection: What You Must Know",
                "content": "cruise_specific_education"
              },
              {
                "segment": "international_travel",
                "subject": "International Travel Risks & Protection",
                "content": "international_travel_focus"
              },
              {
                "segment": "family_travelers",
                "subject": "Protecting Your Family Vacation Investment",
                "content": "family_travel_protection"
              }
            ],
            "success_metric": "segment_specific_ctr > 10%"
          },
          {
            "step": 5,
            "delay": "14_days",
            "action_type": "value_offer_email",
            "subject": "Exclusive: 15% Off Your First Trip Cancellation Policy",
            "content": "limited_time_discount_offer",
            "discount_code": "PROTECT15",
            "validity": "7_days",
            "call_to_action": "Get Protected Now - Save 15%",
            "success_metric": "conversion_rate > 5%"
          },
          {
            "step": 6,
            "delay": "21_days",
            "action_type": "retargeting_campaign",
            "platforms": ["google", "facebook"],
            "campaign_focus": "educational_content_promotion",
            "budget": "50_per_week",
            "duration": "2_weeks"
          },
          {
            "step": 7,
            "delay": "30_days",
            "action_type": "survey_email",
            "subject": "Quick Question: What's Stopping You from Getting Trip Protection?",
            "survey_purpose": "objection_identification",
            "incentive": "free_travel_planning_checklist",
            "success_metric": "response_rate > 8%"
          }
        ],
        "performance_targets": {
          "email_to_quote_rate": 12,
          "nurture_to_purchase_rate": 6,
          "cost_per_conversion": 85,
          "average_nurture_duration": 45
        }
      },
      {
        "workflow_id": "TC_003_HIGH_VALUE_LEAD",
        "workflow_name": "High-Value Trip Cancellation Lead VIP Treatment",
        "trigger": "lead_score_above_70_or_high_trip_value",
        "objective": "prioritize_and_convert_premium_leads",
        "target_audience": "high_value_qualified_prospects",
        "workflow_steps": [
          {
            "step": 1,
            "delay": "15_minutes",
            "action_type": "internal_alert",
            "recipient": "senior_sales_specialist",
            "alert_content": "high_value_lead_notification",
            "lead_details": ["trip_cost", "destination", "contact_info", "lead_score"],
            "priority": "immediate"
          },
          {
            "step": 2,
            "delay": "30_minutes",
            "action_type": "personalized_email",
            "sender": "senior_trip_protection_specialist",
            "subject": "Your [DESTINATION] Trip Deserves Premium Protection",
            "content": "vip_personalized_message",
            "personalization": [
              "trip_destination",
              "trip_cost",
              "travel_date",
              "specific_risks"
            ],
            "call_to_action": "Schedule Personal Consultation"
          },
          {
            "step": 3,
            "delay": "2_hours",
            "action_type": "phone_call_attempt",
            "caller": "dedicated_high_value_specialist",
            "script": "high_value_lead_consultation_offer",
            "voice_mail_message": "personalized_callback_request",
            "success_metric": "contact_rate > 60%"
          },
          {
            "step": 4,
            "delay": "1_day",
            "action_type": "custom_quote_email",
            "subject": "Your Custom Trip Protection Quote - [TRIP_VALUE] Coverage",
            "content": "detailed_personalized_quote",
            "quote_details": [
              "trip_specific_risks",
              "recommended_coverage_levels",
              "premium_options",
              "exclusive_benefits"
            ],
            "urgency_element": "limited_time_vip_pricing"
          },
          {
            "step": 5,
            "delay": "3_days",
            "action_type": "video_message",
            "sender": "company_expert",
            "video_content": "personalized_trip_protection_explanation",
            "duration": "2_minutes",
            "call_to_action": "schedule_consultation_or_purchase"
          }
        ],
        "performance_targets": {
          "contact_rate": 70,
          "conversion_rate": 25,
          "average_policy_value": 950,
          "sales_cycle_duration": 7
        }
      },
      {
        "workflow_id": "TC_004_SEASONAL_CAMPAIGNS",
